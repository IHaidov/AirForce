<Window x:Class="Alesik.Haidov.Airforce.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Alesik.Haidov.Airforce.UI"
        mc:Ignorable="d"
        Title="Airforce window" Width="800" MinHeight="500" SizeToContent="Height"
        Name="Window">
    <Grid>
        <TabControl>
            <TabItem Header="Airbases">
                <StackPanel Margin="10,0,10,0">
                </StackPanel>
            </TabItem>
            <TabItem Header="Aircrafts">
                <StackPanel Margin="10,0,10,0">
                    <TextBlock>
                        <Run Text="GUID: "/>
                        <Run Text="{Binding AircraftGUID}"/>
                    </TextBlock>
                    <TextBlock >
                        <Run Text="Model: "/>
                        <Run Text="{Binding AircraftModel}"/>
                    </TextBlock>
                    <TextBlock >
                        <Run Text="Type: "/>
                        <Run Text="{Binding AircraftType}"/>
                    </TextBlock>
                    <TextBlock >
                        <Run Text="Service hours: "/>
                        <Run Text="{Binding AircraftServiceHours}"/>
                    </TextBlock>
                    <TextBlock >
                        <Run Text="Airbase location: "/>
                        <Run Text="{Binding AircraftAirbase.AircraftBase}"/>
                    </TextBlock>
                    <Button Margin="0,0,0,5" Click="EditAircraft">Edit selected aircraft</Button>
                    <Button Margin="0,0,0,5" Click="RemoveAircraft">Remove selected aircraft</Button>
                    <Button Margin="0,0,0,5" Click="AddAircraft">Add new aircraft</Button>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="5" Padding="2">Data source (.dll):</TextBlock>
                        <TextBox Margin="5" Padding="2" Name="datasource" MinWidth="100">AirforceDBMock.dll</TextBox>
                        <Button Margin="5" Padding="2" Click="ApplyNewDataSource">Apply</Button>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="5" Padding="2">Filter by service hours:</TextBlock>
                        <TextBox Margin="5" Padding="2" Name="aircraftServiceHoursFilterField" MinWidth="100"></TextBox>
                        <Button Margin="5" Padding="2" Click="ApplyAircraftServiceHoursFilter">Apply filter</Button>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="5" Padding="2">Filter by model name:</TextBlock>
                        <TextBox Margin="5" Padding="2" Name="aircraftModelFilterField" MinWidth="100"></TextBox>
                        <Button Margin="5" Padding="2" Click="ApplyAircraftModelFilter">Apply filter</Button>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="5" Padding="2">Search by GUID:</TextBlock>
                        <TextBox Margin="5" Padding="2" Name="aircraftSearchField" MinWidth="300"></TextBox>
                        <Button Margin="5" Padding="2" Click="ApplyAircraftSearch">Search</Button>
                    </StackPanel>
                    <ListBox Margin="0,5,0,10" Name="AircraftList" SelectionChanged="AircraftList_SelectionChanged" ScrollViewer.VerticalScrollBarVisibility="Visible" ItemsSource="{Binding ElementName=Window, Path=AircraftLVM.Aircrafts}" Height="300">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="{Binding AircraftModel}" Width="100"/>
                                    <Label Content="{Binding AircraftAirbase.AircraftBase}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
